@model IEnumerable<WEB2022Apr_P02_T3.Models.Customer>

@{
    ViewData["Title"] = "_ViewCustomer";
}


@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>MemberID</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Date of Birth</th>
                    <th>Address</th>
                    <th>Country</th>
                    <th>Phone Number</th>
                    <th>Email Address</th>
                    <th>Password</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MemberId.ToString()</td>
                        <td>@item.MName</td>
                        <td>@item.MGender</td>
                        <td>@item.MBirthDate</td>
                        <td>@item.MAddress</td>
                        <td>@item.MCountry</td>
                        <td>@item.MTelNo</td>
                        <td>@item.MEmailAddr</td>
                        <td>@item.MPassword</td>

                        <td>
                            <a asp-action="Edit" asp-controller="Staff"
                               asp-route-id="@item.MemberId">Edit</a> |
                            <a asp-action="Details" asp-controller="Staff"
                               asp-route-id="@item.MemberId">Details</a> |
                            <a asp-action="Delete" asp-controller="Staff"
                               asp-route-id="@item.MemberId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>}

