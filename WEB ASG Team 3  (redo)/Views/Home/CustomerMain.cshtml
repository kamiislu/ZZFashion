
@{
    ViewData["Title"] = "CustomerMain";
}

<div class="row" style="color:white">
    <div class="col-md-10"></div>
    <div class="col-md-2">
        <a href="/Home/Index">
            <button style="color: white; background-color: black; padding: 4px 35px;margin-top:5%">Sign Out</button>
        </a>
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-5">
        <h3 style="color:black">Welcome Customer!</h3>
    </div>
    <div class="row" style="margin-left:7%;margin-top:10%">
        <div class="col-md-4">
            <a href="/Feedback/Create">
                <img style="width:20%;margin-left:28%" src="/Images/FeedbackIcon.png" alt="Icon" />
                <h4 style="color: black; margin-top: 3%; margin-left: 11% ">Create Feedback</h4>
            </a>
        </div>

        <div class="col-md-4">
            <a href="/Customer/ViewFeedback">
                <img style="width:20%;margin-left:24%" src="/Images/ResponseIcon.jpg" alt="Icon" />
                <h4 style="color: black; margin-top: 3%; margin-left: 10%">View Response</h4>
            </a>
        </div>
        <div class="col-md-4">
            <a href="/Customer/Edit">
                <img style="width:20%;margin-left:14%" src="/Images/ProfileIcon.png" alt="Icon" />
                <h4 style="color: black; margin-top: 3%; margin-left: 10%">Edit Profile</h4>
            </a>
        </div>
    </div>
    <form asp-action="ValidateBirthdayMonth" class="col-md-12" style="height:100px;background-color:black;margin-top:3%">
        @TempData["BirthdayMessage"]
    </form>
</div>


