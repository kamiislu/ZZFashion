@model IEnumerable<WEB2022Apr_P02_T3.Models.Product>


@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <!-- Use Unicode character encoding - multi-language compatibity -->
    <meta charset="utf-8">
    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width = device-width,
initial-scale = 1" />
    <title>ZZ Fashion</title>
    <!-- Reference to customized styling for this website -->
    <link rel="stylesheet" type="text/css" href="~/css/Site.css">
</head>
<body>
    <div class="container" id="mainContainer">
        <!-- 1st row -->
        <div class="flex-container">
            <!-- Flexbox for logo, auto-expand in the container -->
            <div style="flex:auto;">
                <img id="imgZZLogo" src="~/images/zzlogo.png" style="width:15%" />
            </div>
            <!-- Flexbox for staff login -->

            <div style="background-color:lightgray">
                <form method="post" action="~/Home/StaffLogin">
                    <fieldset class="loginFieldset">
                        <legend style="font-size:25px">ZZFashion Staff Login</legend>
                        <label for="txtLoginID" style="font-size:20px">Login ID:</label>
                        <input type="text" name="txtLoginID"
                               id="txtLoginID" required style="margin:1%;font-size:20px;border:solid" /><br />
                        <label for="txtPassword" style="font-size:20px">Password:</label>
                        <input type="password" name="txtPassword"
                               id="txtPassword" style="margin:1%;font-size:20px;border:solid"
                               required />
                        <br />
                        <input type="submit" id="btnStaffLogin"
                               value="Login" style="margin-left: 8%; margin-top: 10px; margin-bottom: 10px; padding: 5px 35px; color: black; background-color: white " />
                        <br />
                        <span style="color:red;">@TempData["Message"]</span>
                    </fieldset>
                </form>
            </div>
            </divstyle="background-color:lightgray">
        </div>
        <div>
            <div style="text-align: center;">
                <p>
                    <img id="imgLogo" src="~/images/models.png"
                         style="width: 60%" />
                    <div style="font-size:40px">NEW PRODUCTS</div>
                    <div style="font-size:20px; text-align: center">____________________
                    <partial name="~/Views/Product/_NewProduct.cshtml" model="@Model" />
                    </div>
                </p>
            </div>
        </div>

    </div>
</body>


</html>
