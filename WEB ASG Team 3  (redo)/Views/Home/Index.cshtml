@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <!-- Use Unicode character encoding - multi-language compatibity -->
    <meta charset="utf-8">
    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width = device-width,
initial-scale = 1" />
    <title>ZZ Fashion</title>
    <!-- Reference to customized styling for this website -->
    <link rel="stylesheet" type="text/css" href="~/css/Site.css">
</head>
<body>
    <div class="container" id="mainContainer">
        <!-- 1st row -->
        <div class="flex-container">
            <!-- Flexbox for logo, auto-expand in the container -->
            <div style="flex:auto;">
                <img id="imgZZLogo" src="~/images/zzlogo.png" style="width:15%" />
            </div>
            <!-- Flexbox for staff login -->
            <div>
                <form method="post" action="~/Home/StaffLogin">
                    <fieldset class="loginFieldset">
                        <legend>Staff Login</legend>
                        <label for="txtLoginID">Login ID:</label>
                        <input type="text" name="txtLoginID"
                               id="txtLoginID" required style="margin:1%"/><br />
                        <label for="txtPassword">Password:</label>
                        <input type="password" name="txtPassword"
                               id="txtPassword" style="width:100px;margin:1%"
                               required />
                        <input type="submit" id="btnStaffLogin"
                               class="btn btn-primary" value="Login" />
                        <br /> 
                        <span style="color:red;">@TempData["Message"]</span>
                    </fieldset>
                </form>
            </div>
            </div>
        </div>
        <div>
            <div style="text-align: center;">
                <p>
                    <img id="imgLogo" src="~/images/models.png"
                         style="width: 60%" />
                </p>
            </div>
        </div>
    </div>
</body>
</html>
