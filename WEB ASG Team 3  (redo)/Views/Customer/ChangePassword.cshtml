@model WEB2022Apr_P02_T3.Models.Customer

@{
    ViewData["Title"] = "Change Password";
}
<h1>@TempData["Title"]</h1>

<hr />
<form asp-action="ChangePassword">
    <fieldset class="FormContent">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Old Password</label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="MPassword" type="password" class="form-control" name="txtPassword" />
                <span asp-validation-for="MPassword"
                      class="text-danger"></span>
                <span style="color:red;">@TempData["Message"]</span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">New Password</label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="MPassword" type="password" class="form-control" name="txtNewPassword" />
                <span asp-validation-for="MPassword"
                      class="text-danger"></span>
                <span style="color:red;">@TempData["newMessage"]</span>
            </div>

        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Confirm New Password</label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="MPassword" type="password" class="form-control" name="txtConfirmPassword" />
                <span asp-validation-for="MPassword"
                      class="text-danger"></span>
                <span style="color:red;">@TempData["confirmMessage"]</span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Confirm"
                       class="btn btn-primary" />
            </div>
        </div>

    </fieldset>
</form>




