@model IEnumerable<WEB2022Apr_P02_T3.Models.Product>
@{
    ViewData["Title"] = "NewProduct";
}
@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewProduct" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Image</th>
                    <th>Price</th>
                    <th>Date released</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.ProductTitle</td>
                    <td>
                        @{ string imageFileName = item.ProductImage; }
                        <img src="~/images/@imageFileName"
                             style="width:90px" />
                    </td>
                    <td>@item.Price</td>
                    <td>@item.EffectiveDate</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}
